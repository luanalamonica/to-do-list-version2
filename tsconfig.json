{
  "compilerOptions": {
    "target": "es6",
    "module": "none",
    "lib": ["dom", "es2017"],
    "rootDir": "src",
    "outDir": "JS",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
